    <script>
        // JavaScript to handle changing the audio source based on dropdown selection
const dropdowns = [1, 2, 3, 4, 5,6]; // Ensure to include all dropdowns
dropdowns.forEach((num) => {
    const audioPlayer = document.getElementById(`audioPlayer${num}`);
    const audioSource = document.getElementById(`audioSource${num}`);
    const dropdownButton = document.getElementById(`dropdownMenuButton${num}`);
    const dropdownItems = document.querySelectorAll(`#dropdownMenuButton${num} ~ .dropdown-menu .dropdown-item`);

    dropdownItems.forEach(item => {
        item.addEventListener('click', function() {
            const newSrc = this.getAttribute('data-src');
            const songName = this.textContent; // Get the song name

            audioSource.src = newSrc;
            audioPlayer.load(); // Reload the audio player with the new source
            audioPlayer.play(); // Optionally play the audio automatically
            
            // Set button text to selected song name
            dropdownButton.innerHTML = `<i class="bi bi-music-note-beamed"></i> ${songName}`;
            
        });
    });
});

